<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(Main).Assembly">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
                <NotAuthorized>
                    <MudPaper Class="pa-2 mud-theme-error mud-error-text">
                        <MudText Align="Align.Center" Typo="Typo.h6">You are not authorized!</MudText>
                    </MudPaper>
                </NotAuthorized>
            </AuthorizeRouteView>
            <FocusOnNavigate RouteData="@routeData" Selector="h1" />
        </Found>
        <NotFound>
            <LayoutView Layout="@typeof(MainLayout)">
                <MudPaper Class="pa-2 mud-theme-error mud-error-text">
                    <MudText Align="Align.Center" Typo="Typo.h6">Not Found!</MudText>
                </MudPaper>
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>
